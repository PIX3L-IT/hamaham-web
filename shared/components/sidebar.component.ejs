<% /*
  Sidebar de navegación
  Parámetros:
    userName    (string) → nombre del usuario autenticado
    activeRoute (string) → 'patients' | 'invoices' | 'stats' | 'users'
                          Si no se pasa, ningún enlace se marca.
*/ %>

<div class="sidebar">
  <!-- Bloque superior -->
  <div>
    <h4 class="sidebar-title">Hama‑Ham</h4>
    <hr>

    <nav class="nav flex-column">
      <a class="nav-link <%= activeRoute === 'patients' ? 'active' : '' %>"
         href="/patients">
         <i class="bi bi-people"></i> Pacientes
      </a>

      <a class="nav-link <%= activeRoute === 'invoices' ? 'active' : '' %>"
         href="/facturas">
         <i class="bi bi-receipt"></i> Facturas
      </a>

      <a class="nav-link <%= activeRoute === 'stats' ? 'active' : '' %>"
         href="/estadisticas">
         <i class="bi bi-bar-chart-line-fill"></i> Estadísticas
      </a>

      <a class="nav-link <%= activeRoute === 'users' ? 'active' : '' %>"
         href="/usuarios">
         <i class="bi bi-person"></i> Usuarios
      </a>
    </nav>
  </div>

  <!-- Bloque inferior -->
  <div>
    <a class="nav-link" href="/configuracion">
      <i class="bi bi-gear"></i> Configuración
    </a>
    <hr>
    <span class="nav-link disabled">
      <i class="bi bi-person"></i> <%= userName %>
    </span>
    <form action="/users/logout" method="post">
      <button type="submit" class="nav-link">
        <i class="bi bi-box-arrow-right"></i> Cerrar sesión
      </button>
    </form>
  </div>
</div>
