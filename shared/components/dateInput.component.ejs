<link rel="stylesheet" href="/css/bootstrap.min.css" />
<link rel="stylesheet" href="/css/inputs.css">

<% /*
  Componente: inputText

  Parámetros:
  - String name         → nombre del input (atributo "name")
  - String placeholder  → texto guía
  - String color        → color del rectángulo
  - Date min            → mínima fecha aceptada yyyy/mm/dd
  - Date max            → máxima fecha aceptada yyyy/mm/dd
  - Boolean required    → si es obligatorio
*/ %>

<input
  class="standardInput <%= color || '' %>"
  id="<%= name %>"
  name="<%= name %>"
  type="date"
  placeholder="<%= placeholder || '' %>"
  min="<%= min %>"
  max="<%= max %>"
  <%= String(required) === 'true' ? 'required' : '' %>
/>

<script>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('input[type="date"]').forEach(input => {
        input.addEventListener('input', () => {
          const value = input.value;
          const min = input.min;
          const max = input.max;
  
          if (!value) return;
  
          // Comparar como strings funciona en fechas formato YYYY-MM-DD
          if (min && value < min) input.value = min;
          if (max && value > max) input.value = max;
        });
      });
    });
  </script>
  
