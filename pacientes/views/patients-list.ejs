<!DOCTYPE html>
<html>
<head>
  <title>Lista de patients</title>

    <!-- CSS ─────────────────────────────────────────────── -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/sidebar.css" />
    <link rel="stylesheet" href="/css/button.css" />
    <link rel="stylesheet" href="/css/searchbar.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</head>
<body>

  <%- include('sidebar.component.ejs', {
    userName: 'Mariela Macias',
  }) %>

<main class="main-content">

  <h1>patients</h1>
  <a href="/pacientes/create">Crear nuevo patient</a>
  <ul>
    <% patients.forEach(patient => { %>
      <li>
        <strong><%= patient.Name %></strong> (<%= patient.Email %>)
        | <a href="/pacientes/edit/<%= patient._id %>">Editar</a>
        | <form action="/pacientes/delete/<%= patient._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit">Eliminar</button>
          </form>
      </li>
    <% }) %>
  </ul>

  <main>
</body>
</html>