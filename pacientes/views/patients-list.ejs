<!DOCTYPE html>
<html>
<head>
  <title>Lista de patients</title>
</head>
<body>
  <h1>patients</h1>
  <a href="/patients/create">Crear nuevo patient</a>
  <ul>
    <% patients.forEach(patient => { %>
      <li>
        <strong><%= patient.Name %></strong> (<%= patient.Email %>)
        | <a href="/patients/edit/<%= patient._id %>">Editar</a>
        | <form action="/patients/delete/<%= patient._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit">Eliminar</button>
          </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>